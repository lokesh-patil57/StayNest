<img src="<%= listing.image %>" class="card-img-top" alt="..." />
  <div class="card-body">
    <p class="card-text">
      <%= listing.title %>
    </p>
  </div>
  </div>
  
    <li><%= listing.title %></li>
    <li><%= listing.description %></li>
